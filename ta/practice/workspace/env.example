# AI Test Automation Practicum - Environment Variables
# Copy this file to .env and update values as needed

# Test environment settings
NODE_ENV=development

# Playwright settings
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=false

# API testing base URL (JSONPlaceholder for practice)
API_BASE_URL=https://jsonplaceholder.typicode.com

# Development and debugging settings
DEBUG=false
LOG_LEVEL=info

# Practice HTML file path (for local testing)
PRACTICE_HTML_PATH=./practice-artifacts/sample-todo-page.html

# Test Configuration
HEADLESS=true
SLOW_MO=0
TIMEOUT=30000
RETRIES=2

# AI Tools Configuration (optional)
CURSOR_AI_ENABLED=true
COPILOT_ENABLED=true

# MCP Configuration (for Playwright MCP integration)
MCP_SERVER_URL=ws://localhost:8080
MCP_AUTH_TOKEN=your_mcp_token_here

# CI/CD Configuration
CI=false
GITHUB_TOKEN=your_github_token_here

# Logging and Reporting
LOG_FILE=logs/test.log
REPORT_PATH=./test-results

# Test Data (for practice exercises)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=adminpassword123

# External APIs for practice
REQRES_API_URL=https://reqres.in/api
HTTPBIN_URL=https://httpbin.org

# Visual Testing (optional)
PERCY_TOKEN=your_percy_token
APPLITOOLS_API_KEY=your_applitools_key

# Course Settings
COURSE_MODE=practicum
AI_ASSISTANCE_LEVEL=full
PRACTICE_ARTIFACTS_PATH=./practice-artifacts

# Note: The .env file is ignored by git for security
# Update these values based on your specific setup and requirements 